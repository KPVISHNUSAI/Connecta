# Celery
CELERY_BROKER_URL=redis://:your_redis_password@redis_master:6379/1
CELERY_RESULT_BACKEND=redis://:your_redis_password@redis_master:6379/2

# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch1:9200,elasticsearch2:9200,elasticsearch3:9200

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka1:9092,kafka2:9092,kafka3:9092

